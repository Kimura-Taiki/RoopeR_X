<!--based_onScriptのモーダル-->
<%= render "layouts/modal_header", id_class: "boards_show-basedon-script-Modal", title: "脚本典拠盤面再建フォーム" %>
  <%= form_with model: @board, url: update_by_script_board_path, method: :patch, class: "container", local: true do |b| %>
    <div class = "modal-body">
      <%= b.hidden_field :id, class: "card_dayo" %>
      <%= render "layouts/form_collection_select", f: b, model_attr: :script_id, model_name: "脚本id", array: @scripts, class_name: "script_dayo" %>
    </div>
    <div class = "modal-footer">
      <%= render "layouts/form_submit", f: b, text: "更新", delete: "" %>
    </div>
  <% end %>
<%= render "layouts/modal_footer" %>

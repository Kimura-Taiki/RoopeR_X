<%= form_with model: script, class: "container", local: true do |s| %>
  <div class = "modal-body">
    <div class = "form-group row">
      <%= s.label :name, "名称", class: "h4 col-2" %>
      <%= s.text_field :name %>
    </div>
    <div class = "form-group row">
      <%= s.label :package_id, "惨劇セット", class: "h4 col-2" %>
      <%= s.collection_select :package_id, packages, :id, :name %>
    </div>
    <div class = "form-group row">
      <%= s.label :noof_days, "日数", class: "h4 col-2" %>
      <%= s.text_field :noof_days %>
    </div>
    <div class = "form-group row">
      <%= s.label :noof_weeks, "週数", class: "h4 col-2" %>
      <%= s.text_field :noof_weeks %>
    </div>
  </div>
  <div class = "modal-footer">
    <div class = "form-group row">
      <!--<div class = "col-2"></div>-->
      <%#= s.submit '追加', class: "col-2 btn btn-success" %>
      <%= s.submit "　#{text}　", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

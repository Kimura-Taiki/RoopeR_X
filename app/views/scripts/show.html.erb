<h1>Scripts#show</h1>
<p>Find me in app/views/scripts/show.html.erb</p>

<div>
  <h1 class = "text-center"><%= @script.name %></h1>
  <p class = "h3 text-center"><%= @script.noof_weeks %>週 / <%= @script.noof_days %>日</p>
</div>
<button type="button" class="btn btn-primary mb-12" data-toggle="modal" data-target="#scripts-show-Modal">駒追加フォーム</button>

<hr>

<div class = "container-fluid px-5">
  <div class = "row">
    <% @pawns.each do |p| %>
      <div class = "col-2 border">
        <%= p.za.name %>
        </br>
        <%= attachment_image_tag p.za, :image, :fill, 128, 128 %>
      </div>
    <% end %>
  </div>
</div>

<hr>

<div class = "container-fluid px-5">
  <div class = "row">

  </div>
</div>

<!--以下はモーダル部分、これは駒の追加-->
<div class="modal fade" id="scripts-show-Modal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">駒追加フォーム</h4>
      </div>
      <%= form_with model: [@script, @pawn], url: script_pawns_path(@script), method: :post, class: "container", local: true do |p| %>
        <div class = "modal-body">
          <div class = "form-group row">
            <%= p.label :za_id, "座ID", class: "h4 col-2" %>
            <%= p.collection_select :za_id, @zas, :id, :name %>
          </div>
        </div>
        <div class = "modal-footer">
          <div class = "form-group row">
            <button type = "button" class = "btn btn-secondary px-5 mr-3" data-dismiss = "modal">閉じる</button>
            <%= p.submit "追加", class: "btn btn-success px-5" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<h1>Scripts#show</h1>
<p>Find me in app/views/scripts/show.html.erb</p>

<div>
  <h1 class = "text-center"><%= @script.name %></h1>
  <p class = "h3 text-center">
    <%= @script.package.name %>&emsp;
    <%= @script.noof_weeks %>週&thinsp;/&thinsp;<%= @script.noof_days %>日
  </p>
</div>
<div class = "row mb-1">
  <button type="button" class="btn btn-primary col mx-2" data-toggle="modal" data-target="#scripts_show-edit-script-Modal">基本情報を編集</button>
  <button type="button" class="btn btn-primary col mx-2" data-toggle="modal" data-target="#scripts_show-add-pawn-Modal">駒を追加</button>
  <%= link_to "削除", @script, method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger col mx-2" %>
</div>

<hr>

<!--日程表。事件モデルや駒モデルと連携する-->
<div class = "container-fluid px-5">
  <div class = "row">
    <% for i in 1..@script.noof_days do %>
      <div class = "col border">
        <p>day<%= i %></p>
        <% if @array[i] %>
          事件があるねー
        <% else %>
          <% @incident.day = i %>
          <button type="button" class="btn btn-primary col mx-2" data-toggle="modal" data-target="#scripts_show-add-incident-Modal">事件を追加</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<hr>

<!--駒一覧-->
<div class = "container-fluid px-5">
  <div class = "row">
    <% @pawns.each do |p| %>
      <div class = "col-2 border">
        <%= p.za.name %>
        </br>
        <%= attachment_image_tag p.za, :image, :fill, 128, 128 %>
      </div>
    <% end %>
  </div>
</div>

<hr>

<!--事件一覧。駒モデルと連携する-->
<div class = "container-fluid px-5">
  <div class = "row">

  </div>
</div>

<!--脚本基本情報編集用のモーダル-->
<%= render "scripts/modal_header", id_class: "scripts_show-edit-script-Modal", text: "脚本基本情報編集フォーム" %>
  <%= render "scripts/form", script: @script, packages: @packages, text: "更新" %>
<%= render "scripts/modal_footer" %>

<!--以下はモーダル部分、これは駒の追加-->
<%= render "scripts/modal_header", id_class: "scripts_show-add-pawn-Modal", text: "駒追加フォーム" %>
  <%= form_with model: [@script, @pawn], url: script_pawns_path(@script), method: :post, class: "container", local: true do |p| %>
    <div class = "modal-body">
      <div class = "form-group row">
        <%= p.label :za_id, "座ID", class: "h4 col-2" %>
        <%= p.collection_select :za_id, @zas, :id, :name %>
      </div>
    </div>
    <div class = "modal-footer">
      <div class = "form-group row">
        <button type = "button" class = "btn btn-secondary px-5 mr-3" data-dismiss = "modal">閉じる</button>
        <%= p.submit "追加", class: "btn btn-success px-5" %>
      </div>
    </div>
  <% end %>
<%= render "scripts/modal_footer" %>

<!--事件追加用のモーダル-->
<%= render "scripts/modal_header", id_class: "scripts_show-add-incident-Modal", text: "事件追加フォーム" %>
  <%= form_with modal: [@script, @incident], class: "container", local: true do |i| %>
    <div class = "modal-body">
      <div class = "form-group row">
        <%= i.label :day, "日付", class: "h4 col-2" %>
        <%#= i.select :day, @days, {}, { class: "btn btn-primary dropdown-toggle" } %>
        <%= i.text_field :day %>
      </div>
      <div class = "form-group row">
        <%= i.label :crime_id, "犯罪ID", class: "h4 col-2" %>
        <%= i.collection_select :crime_id, @crimes, :id, :name %>
      </div>
      <div class = "form-group row">
        <%= i.label :pawn_id, "犯人", class: "h4 col-2" %>
        <%= i.collection_select :pawn_id, @pawns, :id, :pawn_name %>
      </div>
    </div>
    <div class = "modal-footer">
      <div class = "form-group row">
        <button type = "button" class = "btn btn-secondary px-5 mr-3" data-dismiss = "modal">閉じる</button>
        <%= i.submit "追加", class: "btn btn-success px-5" %>
      </div>
    </div>
  <% end %>
<%= render "scripts/modal_footer" %>

